<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toyota C-HR Bakım Takip"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp" />

        <EditText
            android:id="@+id/kmInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mevcut Kilometreyi Girin"
            android:inputType="number"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/lastOilChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Son Yağ Değişim Km'si"
            android:inputType="number"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bakım Durumu Hesapla"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonuç burada görünecek"
            android:textSize="16sp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genel Bakım Listesi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#EFEFEF">

            <TextView
                android:id="@+id/itemOil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Motor Yağı: Her 10.000 km"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/itemOilFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Yağ Filtresi: Her 10.000 km"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/itemAirFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Hava Filtresi: 20.000 – 30.000 km"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/itemPollenFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Polen Filtresi: Yılda 1 kez"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/itemSparkPlug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Buji (Hybrid): 60.000 km"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/itemCoolant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Soğutma Suyu: 160.000 km"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/itemTransmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• CVT Şanzıman Yağı: 80.000 – 100.000 km"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
